#!/usr/bin/env bash

GITHUB_USER=$1
GITHUB_REPO=$2
GITHUB_BRANCH=$3
GITHUB_TOKEN=$4
NPM_TOKEN=$5
PACKAGE_VERSION=$6

docker run --rm\
  -e GITHUB_USER=$GITHUB_USER \
  -e GITHUB_REPO=$GITHUB_REPO \
  -e GITHUB_BRANCH=$GITHUB_BRANCH \
  -e GITHUB_TOKEN=$GITHUB_TOKEN \
  -e NPM_TOKEN=$NPM_TOKEN \
  -e PACKAGE_VERSION=$PACKAGE_VERSION \
  -e FORCE_COLOR=1 \
   madoos/node-npm-publisher:caseonit